{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "awtrixIp": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "IP",
                    "help": "IP address of your Awtrix Light device"
                },
                "_ioBrokerKursBanner": {
                    "newLine": true,
                    "type": "staticImage",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "href": "https://haus-automatisierung.com/iobroker-kurs/?refid=iobroker-awtrix-light",
                    "src": "https://haus-automatisierung.com/images/ads/ioBroker-Kurs.png"
                }
            }
        },
        "_customApps": {
            "type": "panel",
            "label": "Apps",
            "items": {
                "customApps": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Custom Apps",
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "20%",
                            "title": {
                                "en": "Name",
                                "de": "Name",
                                "ru": "Имя",
                                "pt": "Nome",
                                "nl": "Naam",
                                "fr": "Nom",
                                "it": "Nome",
                                "es": "Nombre",
                                "pl": "Nazwa",
                                "uk": "Ім'я",
                                "zh-cn": "姓名"
                            },
                            "filter": true,
                            "sort": true,
                            "default": "",
                            "validator": "/^([a-z]{1,})$/.test(data.name)"
                        },
                        {
                            "type": "text",
                            "attr": "icon",
                            "width": "20%",
                            "title": {
                                "en": "Icon",
                                "de": "Symbol",
                                "ru": "Значок",
                                "pt": "Ícone",
                                "nl": "Icoon",
                                "fr": "Icône",
                                "it": "Icona",
                                "es": "Icono",
                                "pl": "Ikona",
                                "zh-cn": "图标"
                            },
                            "filter": false,
                            "sort": false
                        },
                        {
                            "type": "objectId",
                            "attr": "objId",
                            "width": "20%",
                            "title": {
                                "en": "Object",
                                "de": "Obiekt",
                                "ru": "Объект",
                                "pt": "Objeto",
                                "nl": "Object",
                                "fr": "Objet",
                                "it": "Oggetto",
                                "es": "Objeto",
                                "pl": "Obiekt",
                                "uk": "Об'єкт",
                                "zh-cn": "目 录"
                            },
                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "text",
                            "attr": "text",
                            "width": "40%",
                            "title": {
                                "en": "Text",
                                "de": "Text",
                                "ru": "Текст",
                                "pt": "Texto",
                                "nl": "Tekst",
                                "fr": "Texte",
                                "it": "Testo",
                                "es": "Texto",
                                "pl": "Tekst",
                                "zh-cn": "文本"
                            },
                            "filter": false,
                            "sort": false,
                            "default": "%s %u"
                        },
                        {
                            "type": "number",
                            "attr": "duration",
                            "width": "20%",
                            "title": {
                                "en": "Duration (sec)",
                                "de": "Dauer (Sek.)",
                                "ru": "Продолжительность (сек)",
                                "pt": "Duração (s)",
                                "nl": "Duur (sec)",
                                "fr": "Durée (sec)",
                                "it": "Durata (sec)",
                                "es": "Duración (seg)",
                                "pl": "Czas trwania (s)",
